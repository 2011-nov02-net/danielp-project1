@model IEnumerable<MyStore.WebApp.Models.StoreViewModels.StoreViewModel>

@{
    ViewData["Title"] = "Stores";
}

<h1>Stores</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOrders)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumItemsInStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOrders)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumItemsInStock)
            </td>
            <td>
                @Html.ActionLink("Stock", "Stock", new { store = item.Name }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
