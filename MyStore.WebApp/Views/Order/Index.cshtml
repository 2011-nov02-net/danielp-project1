    ViewData["Title"] = "Orders";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Place New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
